<div class="hero">
  <h1>Welcome to Gemini Code Helper</h1>
  <p>
    Your AI-powered coding assistant for generating documentation, suggesting
    APIs, and improving code quality.
  </p>
</div>

<div class="features">
  <div class="feature-card">
    <h2>Generate README</h2>
    <p>Create professional README files for your projects</p>
    <a href="/generate-readme" class="btn">Get Started</a>
  </div>
  <div class="feature-card">
    <h2>Suggest API</h2>
    <p>Get API endpoint suggestions for your application</p>
    <a href="/suggest-api" class="btn">Try It</a>
  </div>
  <div class="feature-card">
    <h2>Explain Code</h2>
    <p>Get detailed explanations of your code</p>
    <a href="/explain-code" class="btn">Analyze</a>
  </div>
  <div class="feature-card">
    <h2>Fix Code</h2>
    <p>Find and fix issues in your code</p>
    <a href="/fix-code" class="btn">Debug</a>
  </div>
  <div class="feature-card">
    <h2>Compare Code</h2>
    <p>Compare different versions of code and analyze changes</p>
    <a href="/compare-code" class="btn">Compare</a>
  </div>
</div>

<div class="recent-activity">
  <h2>Recent Activity</h2>
  <% if (history && history.length > 0) { %>
  <div class="history-list">
    <% history.forEach(item => { %>
    <div class="history-item">
      <span class="request-type"><%= item.requestType %></span>
      <span class="timestamp"
        ><%= new Date(item.timeStamp).toLocaleString() %></span
      >
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p>No recent activity</p>
  <% } %>
</div>
